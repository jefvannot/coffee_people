<h1>Tous les cvs</h1>



  <div class="container">
    <div class="row">

    <% @cvs.each do |cv| %>

      <div class="col-xs-12 col-sm-4">

        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://unsplash.it/600/300?image=0');">
          <div class="card-category"><%= cv.job %></div>
          <div class="card-text">
            <h2><%= cv.first_name %></h2>
            <p><%= cv.city %></p>
          </div>
          <div class="card-user">
            <img src="http://placehold.it/50x50" class="avatar avatar-bordered"/>
          </div>
          <a href="#" class="card-link"></a>
        </div>
      </div>
    <% end %>

    </div>
  </div>
